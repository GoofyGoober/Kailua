%p(id="notice")= notice

%h1= Outcome.model_name.human(count: :many)

%table.table
  %thead
    %tr
      %th
      %th= Outcome.human_attribute_name('description')
      %th Categoria
      %th= Outcome.human_attribute_name('date_of_transaction')
      %th

  %tbody
    - @outcomes.each do |outcome|
      %tr
        %td= outcome.price.format
        %td= outcome.description
        %td= outcome.category&.name
        %td= l outcome.date_of_transaction
        %td(style="text-align:right")
          = link_to t('actions.edit'), edit_outcome_path(outcome)
          = link_to t('actions.delete'), outcome, :method => :delete, :data => { :confirm => 'Sei sicuro?' }
    %tr
      %td(colspan="4")
        %strong Totale
        = @outcomes.total.format

%br

= link_to 'Aggiungi Uscita', new_outcome_path, class: 'btn btn-primary'
