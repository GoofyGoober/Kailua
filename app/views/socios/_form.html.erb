<%= form_for(socio) do |f| %>
  <% if socio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(socio.errors.count, "error") %> prohibited this socio from being saved:</h2>

      <ul>
      <% socio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <% last_num = last_socio(:number) %>
    <%= f.label :number, 'Numero Card' %>
    <%= f.number_field :number, value: last_num + 1, class: 'form-control' %>
  </div>


  <div class="form-group">
    <% last_date = last_socio(:registration_date) || Date.today %>
    <%= f.label :registration_date, 'Data di registrazione' %>
    <%= f.date_field :registration_date, value: last_date, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :surname, 'Cognome' %>
    <%= f.text_field :surname, class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= f.label :birth_place, 'Luogo di nascita' %>
    <%= f.text_field :birth_place, class: 'form-control' %>
  </div>


    <div class="form-group">
    <%= f.label :birthdate, 'Data di nascita' %>
    <%= f.date_field :birthdate, class: 'form-control' %>
  </div>


    <div class="form-group">
    <%= f.label :cf, 'Codice Fiscale' %>
    <%= f.text_field :cf, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :residence_place, 'Luogo di residenza' %>
    <%= f.text_field :residence_place, class: 'form-control' %>
  </div>



  <div class="form-group">
    <%= f.label :contact, 'Mail' %>
    <%= f.text_field :contact, class: 'form-control' %>
  </div>



  <div class="form-group">
    <%= f.label :tel, 'Telefono' %>
    <%= f.text_field :tel, class: 'form-control' %>
  </div>




  <div class="checkbox">
    <label> <%= f.check_box :complete%> Registrazione completata attraverso il modulo cartaceo </label>
  </div>

  <%
  label = "Crea"
  label = "Aggiorna" if action_name == 'edit'
  %>
    <%= f.submit label, class: 'btn btn-primary btn-block' %>
<% end %>
